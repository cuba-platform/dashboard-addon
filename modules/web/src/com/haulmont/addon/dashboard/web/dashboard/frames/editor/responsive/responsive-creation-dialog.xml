<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.haulmont.addon.dashboard.web.dashboard.frames.editor.responsive.ResponsiveCreationDialog"
        messagesPack="com.haulmont.addon.dashboard.web.dashboard.frames.editor.responsive">
    <dialogMode height="AUTO"
                width="480"/>
    <layout height="100%"
            spacing="true"
            width="100%"
            expand="btnPanel">
        <label value="msg://dashboard.gridRules"/>
        <hbox id="slidersBox"
              height="100%"
              spacing="true"
              width="100%">
            <vbox id="mobileBox" spacing="true" width="100%" height="100%"/>
            <vbox id="desktopBox" spacing="true" width="100%" height="100%"/>
        </hbox>
        <buttonsPanel id="btnPanel">
            <button id="okBtn"
                    caption="msg://ok"
                    icon="OK"
                    invoke="apply"/>
            <button id="cancelBtn"
                    caption="msg://cancel"
                    icon="CANCEL"
                    invoke="cancel"/>
        </buttonsPanel>
    </layout>
</window>
