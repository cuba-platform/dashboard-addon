<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://gridSettings"
        class="com.haulmont.addon.dashboard.web.dashboard.frames.editor.grid_creation_dialog.GridCreationDialog"
        messagesPack="com.haulmont.addon.dashboard.web.dashboard">
    <dialogMode height="200"
                width="480"/>
    <layout height="100%"
            spacing="true"
            width="100%">
        <hbox id="slidersBox"
              height="100%"
              spacing="true"
              width="100%"/>
        <buttonsPanel id="btnPanel">
            <button id="okBtn"
                    caption="msg://ok"
                    icon="OK"
                    invoke="apply"/>
            <button id="cancelBtn"
                    caption="msg://cancel"
                    icon="CANCEL"
                    invoke="cancel"/>
        </buttonsPanel>
    </layout>
</window>