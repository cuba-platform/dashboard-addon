<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.haulmont.addon.dashboard.web.dashboard.frames.editor.colspan.ColspanDialog"
        messagesPack="com.haulmont.addon.dashboard.web.dashboard.frames.editor.colspan">
    <dialogMode height="AUTO"
                width="480"/>
    <layout height="100%"
            spacing="true"
            width="100%">
        <hbox width="480px" spacing="true">
            <label id="leftLabel"
                   width="100%"
                   htmlEnabled="true"/>
            <label id="rightLabel"
                   width="100%"
                   htmlEnabled="true"/>
        </hbox>
        <hbox id="sliderBox"
              height="100%"
              spacing="true"
              width="100%"/>
        <buttonsPanel id="btnPanel">
            <button id="okBtn"
                    caption="msg://ok"
                    icon="OK"
                    invoke="apply"/>
            <button id="cancelBtn"
                    caption="msg://cancel"
                    icon="CANCEL"
                    invoke="cancel"/>
        </buttonsPanel>
    </layout>
</window>
