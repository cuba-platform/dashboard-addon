<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.addon.dashboard.web.widgettemplate.WidgetTemplateBrowse"
        focusComponent="widgetTemplateTable"
        lookupComponent="widgetTemplateTable"
        messagesPack="com.haulmont.addon.dashboard.web.widget">
    <dsContext>
        <collectionDatasource id="widgetTemplatesDs"
                              class="com.haulmont.addon.dashboard.entity.WidgetTemplate"
                              datasourceClass="com.haulmont.addon.dashboard.web.datasource.AllowedWidgetTemplatesDatasource"/>
    </dsContext>
    <layout spacing="true">
        <table id="widgetTemplateTable"
               height="100%"
               width="100%">
            <actions>
                <action id="create"
                        caption="msg://create"
                        icon="CREATE_ACTION"/>
                <action id="edit"
                        caption="msg://edit"
                        icon="EDIT_ACTION"/>
                <action id="remove"
                        caption="msg://remove"
                        icon="REMOVE_ACTION"/>
            </actions>
            <columns>
                <column id="name"/>
                <column id="description"/>
            </columns>
            <rows datasource="widgetTemplatesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="widgetTemplateTable.create"/>
                <button id="editBtn"
                        action="widgetTemplateTable.edit"/>
                <button id="removeBtn"
                        action="widgetTemplateTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
