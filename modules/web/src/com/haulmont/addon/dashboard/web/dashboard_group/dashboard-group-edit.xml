<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.haulmont.addon.dashboard.web.dashboard_group.DashboardGroupEdit"
        datasource="dashboardGroupDs"
        focusComponent="fieldGroup"
        messagesPack="com.haulmont.addon.dashboard.web.dashboard_group">
    <dsContext>
        <datasource id="dashboardGroupDs"
                    class="com.haulmont.addon.dashboard.entity.DashboardGroup"
                    view="dashboards">
            <collectionDatasource id="dashboardsDs"
                                  property="dashboards"/>
        </datasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="dashboardsTable"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="dashboardGroupDs">
            <column width="250px">
                <field property="name"/>
            </column>
        </fieldGroup>
        <label id="tableLabel"
               value="msg://tableDashboardGroup"/>
        <buttonsPanel id="buttonsPanel"
                      alwaysVisible="true">
            <button id="addBtn"
                    action="dashboardsTable.add"
                    caption="msg://add"
                    icon="PLUS_CIRCLE"/>
            <button id="excludeBtn"
                    action="dashboardsTable.exclude"
                    caption="msg://exclude"
                    icon="MINUS_CIRCLE"/>
        </buttonsPanel>
        <table id="dashboardsTable"
               width="100%">
            <actions>
                <action id="add"/>
                <action id="exclude"/>
            </actions>
            <columns>
                <column id="dashboardModel"/>
                <column id="referenceName"/>
            </columns>
            <rows datasource="dashboardsDs"/>
        </table>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
