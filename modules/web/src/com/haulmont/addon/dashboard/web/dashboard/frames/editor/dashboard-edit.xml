<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://dashboardEdit"
        class="com.haulmont.addon.dashboard.web.dashboard.frames.editor.DashboardEdit"
        datasource="dashboardDs"
        focusComponent="amxd$dashboardEditFieldGroup1">
    <dsContext>
        <datasource id="dashboardDs"
                    class="com.haulmont.addon.dashboard.model.Dashboard"/>
    </dsContext>
    <layout expand="dashboardLayoutBox"
            height="100%"
            spacing="true">
        <hbox spacing="true">
            <fieldGroup id="amxd$dashboardEditFieldGroup1"
                        datasource="dashboardDs">
                <column width="300px">
                    <field property="title"/>
                    <field property="referenceName"/>
                </column>
            </fieldGroup>
            <fieldGroup id="amxd$dashboardEditFieldGroup2"
                        datasource="dashboardDs">
                <column width="250px">
                    <field property="timerDelay"/>
                    <field custom="true"
                           generator="generateAssistanceBeanNameField"
                           property="assistantBeanName"/>
                </column>
            </fieldGroup>
            <fieldGroup id="amxd$dashboardEditFieldGroup3"
                        datasource="dashboardDs">
                <column width="250px">
                    <field property="isAvailableForAllUsers"/>
                </column>
            </fieldGroup>
        </hbox>
        <groupBox id="paramsBox"
                  caption="msg://dashboardParameters"
                  collapsable="true"
                  collapsed="true"/>
        <hbox id="dashboardLayoutBox"
              expand="canvasBox"
              spacing="true"
              width="100%">
            <vbox id="paletteBox"
                  height="100%"
                  spacing="true"
                  width="300px"/>
            <vbox id="canvasBox"
                  height="100%"
                  spacing="true"/>
        </hbox>
        <buttonsPanel id="buttonsPanel"
                      alwaysVisible="true">
            <button id="okBtn"
                    caption="msg://ok"
                    icon="EDITOR_OK"
                    invoke="commitAndClose"/>
            <button id="cancelBtn"
                    caption="msg://cancel"
                    icon="EDITOR_CANCEL"
                    invoke="cancel"/>
            <button id="propagateBtn"
                    caption="msg://propagate"
                    icon="BULLHORN"
                    invoke="onPropagateBtnClick"
                    stylename="amdx-left-margin-button"/>
            <button id="exportJsonBtn"
                    caption="msg://exportJson"
                    icon="DOWNLOAD"
                    invoke="onExportJsonBtnClick"
                    stylename="amdx-left-margin-button"/>
            <upload id="importJsonField"
                    uploadButtonCaption="msg://importJson"
                    uploadButtonIcon="UPLOAD"/>
        </buttonsPanel>
    </layout>
</window>
