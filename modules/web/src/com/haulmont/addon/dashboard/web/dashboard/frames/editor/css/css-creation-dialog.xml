<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://cssLayoutSettings"
        class="com.haulmont.addon.dashboard.web.dashboard.frames.editor.css.CssLayoutCreationDialog"
        messagesPack="com.haulmont.addon.dashboard.web.dashboard">
    <dialogMode height="AUTO"
                width="480"/>
    <layout height="100%"
            spacing="true"
            width="100%">
        <grid id="grid" spacing="true" width="100%">
            <columns>
                <column/>
                <column flex="1"/>
            </columns>
            <rows>
                <row>
                    <label value="msg://styleName"/>
                    <textField id="styleName" width="100%"/>
                </row>
                <row>
                    <label value="msg://responsive"/>
                    <checkBox id="responsive"/>
                </row>
            </rows>
        </grid>
        <buttonsPanel id="btnPanel">
            <button id="okBtn"
                    caption="msg://ok"
                    icon="OK"
                    invoke="apply"/>
            <button id="cancelBtn"
                    caption="msg://cancel"
                    icon="CANCEL"
                    invoke="cancel"/>
        </buttonsPanel>
    </layout>
</window>