<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.haulmont.addon.dashboard.web.widget.WidgetTemplateBrowse"
        focusComponent="widgetsTable"
        lookupComponent="widgetsTable"
        datasource="modelWidgetsDs"
        messagesPack="com.haulmont.addon.dashboard.web.widget">
    <dsContext>
        <collectionDatasource id="widgetTemplatesDs"
                              class="com.haulmont.addon.dashboard.entity.WidgetTemplate"
                              view="widget-group-view">
            <query>
                <![CDATA[select e from amxd$WidgetTemplate e]]>
            </query>
        </collectionDatasource>
        <collectionDatasource id="modelWidgetsDs"
                              class="com.haulmont.addon.dashboard.model.Widget"/>
    </dsContext>
    <layout spacing="true">
        <table id="widgetsTable"
               height="100%"
               width="100%">
            <actions>
                <action id="create"
                        caption="msg://create"
                        icon="CREATE_ACTION"
                        invoke="createWidget"/>
                <action id="edit"
                        caption="msg://edit"
                        icon="EDIT_ACTION"
                        invoke="editWidget"/>
                <action id="remove"
                        caption="msg://remove"
                        icon="REMOVE_ACTION"
                        invoke="removeWidget"/>
            </actions>
            <columns>
                <column id="caption"/>
                <column id="description"/>
            </columns>
            <rows datasource="modelWidgetsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="widgetsTable.create"/>
                <button id="editBtn"
                        action="widgetsTable.edit"/>
                <button id="removeBtn"
                        action="widgetsTable.remove"/>
            </buttonsPanel>
        </table>
    </layout>
</window>
