<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.3.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.3.xsd">

    <!-- Annotation-based beans -->
    <context:component-scan base-package="com.audimex.dashboard"/>

    <bean id="uiModelConverter" class="com.audimex.dashboard.web.dashboard.tools.DashboardModelConverter"
          scope="prototype">
        <property name="factory" ref="amdx_VaadinUiComponentsFactory"/>
    </bean>

    <bean id="dropModelConverter" class="com.audimex.dashboard.web.dashboard.tools.DashboardModelConverter"
          scope="prototype">
        <property name="factory" ref="amdx_VaadinDropComponentsFactory"/>
    </bean>
</beans>