<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://dashboard.widgetConfigWindowCaption"
        class="com.audimex.dashboard.web.screens.WidgetConfigWindow"
        messagesPack="com.audimex.dashboard.web.screens">

    <actions>
        <action id="save" invoke="save" shortcut="CTRL-ENTER"/>
        <action id="cancel" invoke="cancel" shortcut="ESCAPE"/>
    </actions>

    <dialogMode forceDialog="true"
                height="AUTO"
                modal="true"
                width="AUTO"/>

    <layout>
        <hbox width="480px" spacing="true">
            <label id="leftLabel" width="100%" htmlEnabled="true"/>
            <label id="rightLabel" width="100%" htmlEnabled="true"/>
        </hbox>
        <hbox id="sliderLayout"
              width="480px"
              spacing="true"
              align="MIDDLE_CENTER"/>
        <hbox id="buttonsLayout"
              spacing="true">
            <button id="okButton" caption="mainMsg://actions.Ok" icon="icons/ok.png" action="save"/>
            <button id="cancelButton" caption="mainMsg://actions.Cancel" icon="icons/cancel.png" action="cancel"/>
        </hbox>
        <hbox id="parametersBox" width="100%" height="100%" spacing="true"/>
    </layout>
</window>
