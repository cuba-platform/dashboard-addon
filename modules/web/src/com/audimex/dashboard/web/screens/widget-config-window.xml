<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.audimex.dashboard.web.screens.WidgetConfigWindow"
        messagesPack="com.audimex.dashboard.web.screens">
    <actions>
        <action id="save" invoke="save" shortcut="CTRL-ENTER"/>
        <action id="cancel" invoke="cancel" shortcut="ESCAPE"/>
    </actions>
    <dialogMode forceDialog="true"
                height="AUTO"
                modal="true"
                width="AUTO"/>
    <layout margin="true">
        <hbox id="sliderLayout"
              width="300px"
              spacing="true"/>
        <hbox id="buttonsLayout"
              spacing="true">
            <button id="okButton" caption="msg://ok" icon="icons/ok.png" action="save"/>
            <button id="cancelButton" caption="msg://cancel" icon="icons/cancel.png" action="cancel"/>
        </hbox>
    </layout>
</window>
