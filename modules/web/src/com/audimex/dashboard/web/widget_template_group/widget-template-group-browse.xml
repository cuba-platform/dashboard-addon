<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://browseCaption"
        class="com.audimex.dashboard.web.widget_template_group.WidgetTemplateGroupBrowse"
        focusComponent="widgetTemplateGroupsTable"
        lookupComponent="widgetTemplateGroupsTable"
        messagesPack="com.audimex.dashboard.web.widget_template_group">
    <dsContext>
        <groupDatasource id="widgetTemplateGroupsDs"
                         class="com.audimex.dashboard.entity.WidgetTemplateGroup"
                         view="widget-templates">
            <query>
                <![CDATA[select e from amxd$WidgetTemplateGroup e]]>
            </query>
        </groupDatasource>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="widgetTemplateGroupsTable"
            spacing="true">
        <filter id="filter"
                applyTo="widgetTemplateGroupsTable"
                datasource="widgetTemplateGroupsDs">
            <properties include=".*"/>
        </filter>
        <groupTable id="widgetTemplateGroupsTable"
                    width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="name"/>
            </columns>
            <rows datasource="widgetTemplateGroupsDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        action="widgetTemplateGroupsTable.create"/>
                <button id="editBtn"
                        action="widgetTemplateGroupsTable.edit"/>
                <button id="removeBtn"
                        action="widgetTemplateGroupsTable.remove"/>
            </buttonsPanel>
        </groupTable>
    </layout>
</window>
