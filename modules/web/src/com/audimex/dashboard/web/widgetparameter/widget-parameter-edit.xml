<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.audimex.dashboard.web.widgetparameter.WidgetParameterEdit"
        datasource="widgetParameterDs"
        focusComponent="fieldGroup"
        messagesPack="com.audimex.dashboard.web.widgetparameter">
    <dsContext>
        <datasource id="widgetParameterDs"
                    class="com.audimex.dashboard.entity.WidgetParameter"
                    view="master-widgetParameter-view">
            <datasource id="referenceToEntityDs" property="referenceToEntity"/>
        </datasource>
    </dsContext>
    <dialogMode height="AUTO"
                width="AUTO"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="widgetParameterDs">
            <column width="250px">
                <field property="name"
                       required="true"/>
                <field property="alias"
                       required="true"/>
                <field property="parameterType"
                       required="true"/>
                <field id="metaClassName"
                       datasource="referenceToEntityDs"
                       custom="true"/>
                <field id="viewName"
                       datasource="referenceToEntityDs"
                       custom="true"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
