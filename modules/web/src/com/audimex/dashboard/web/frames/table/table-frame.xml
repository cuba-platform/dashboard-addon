<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.audimex.dashboard.web.frames.table.TableDemoFrame">
    <dsContext>
        <collectionDatasource id="productsDs"
                              class="com.audimex.dashboard.entity.Product"
                              allowCommit="false"
                              refreshMode="NEVER"/>
    </dsContext>

    <layout expand="table">
        <label value="Best Sellers in December" stylename="h1"/>

        <table id="table" width="100%">
            <columns>
                <column id="title"/>
                <column id="description"/>
                <column id="price"/>
            </columns>
            <rows datasource="productsDs"/>
        </table>
    </layout>
</window>