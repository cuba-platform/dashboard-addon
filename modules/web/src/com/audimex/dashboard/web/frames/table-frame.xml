<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.audimex.dashboard.web.frames.TableFrame">
    <dsContext>
        <collectionDatasource id="productsDs"
                              allowCommit="false"
                              class="com.audimex.dashboard.entity.Product"
                              refreshMode="NEVER"/>
    </dsContext>
    <layout expand="table">
        <label stylename="h1"
               value="Best Sellers in December"/>
        <table id="table"
               width="100%">
            <columns>
                <column id="title"/>
                <column id="description"/>
                <column id="price"/>
            </columns>
            <rows datasource="productsDs"/>
        </table>
    </layout>
</window>
