<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        xmlns:chart="http://schemas.haulmont.com/charts/charts.xsd"
        class="com.audimex.dashboard.web.frames.chart.ChartDemoFrame">
    <dsContext>
        <collectionDatasource id="countryDataDs"
                              class="com.audimex.dashboard.entity.CountryData"
                              refreshMode="NEVER" allowCommit="false"/>
    </dsContext>
    <layout expand="pieChart">
        <label stylename="h1" value="Sales distribution"/>

        <chart:pieChart id="pieChart"
                        datasource="countryDataDs"
                        titleField="country"
                        valueField="value"
                        width="100%">
            <chart:legend autoMargins="false"
                          markerType="CIRCLE"
                          position="BOTTOM"/>
            <chart:export/>
        </chart:pieChart>
    </layout>
</window>