<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.audimex.dashboard.web.palette.PaletteFrame"
        icon="font-icon:DASHBOARD"
        messagesPack="com.audimex.dashboard.web.palette">
    <dialogMode height="600"
                width="800"/>
    <layout expand="mainLayout"
            spacing="true">
        <hbox id="controlLayout"
              spacing="true">
            <checkBox id="allowEdit"
                      align="MIDDLE_LEFT"
                      caption="Designer mode"/>
        </hbox>
        <hbox id="mainLayout"
              expand="dropLayout"
              spacing="true"
              width="100%">
            <vbox id="palette"
                  expand="treeLayout"
                  height="100%"
                  spacing="true"
                  width="200px">
                <vbox id="containers"/>
                <hbox spacing="true"
                      width="100%">
                    <button id="removeComponent"
                            caption="Remove"
                            enable="false"
                            invoke="removeComponent"
                            width="100%"/>
                    <button caption="Clear all"
                            invoke="clearAll"
                            width="100%"/>
                </hbox>
                <vbox id="treeLayout"/>
            </vbox>
            <vbox id="dropLayout"
                  height="100%"
                  spacing="true"/>
        </hbox>
    </layout>
</window>
