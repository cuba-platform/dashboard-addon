<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.audimex.dashboard.web.parameter.frames.EntitiesListValueFrame"
        focusComponent="entitiesTable"
        lookupComponent="entitiesTable">
    <dsContext>
        <valueCollectionDatasource id="entitiesDs">
            <properties>
                <property datatype="string" name="metaClassName"/>
                <property datatype="string" name="entityId"/>
                <property datatype="string" name="viewName"/>
            </properties>
        </valueCollectionDatasource>
    </dsContext>
    <layout spacing="true">
        <table id="entitiesTable"
               height="100%"
               width="100%">
            <actions>
                <action id="create"/>
                <action id="edit"/>
                <action id="remove"/>
            </actions>
            <columns>
                <column id="metaClassName"/>
                <column id="entityId"/>
                <column id="viewName"/>
            </columns>
            <rows datasource="entitiesDs"/>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn"
                        caption="msg://create"
                        invoke="createEntityValue"/>
                <button id="editBtn"
                        caption="msg://edit"
                        invoke="editEntityValue"/>
                <button id="removeBtn"
                        caption="msg://remove"
                        invoke="removeEntityValue"/>
            </buttonsPanel>
        </table>
    </layout>
</window>