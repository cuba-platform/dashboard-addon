<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://dashboardEdit"
        class="com.audimex.dashboard.web.dashboard.frames.editor.DashboardEdit"
        datasource="dashboardDs"
        focusComponent="fieldGroup">
    <dsContext>
        <datasource id="dashboardDs"
                    class="com.audimex.dashboard.model.Dashboard"/>
        <collectionDatasource id="widgetTemplatesDs"
                              class="com.audimex.dashboard.entity.WidgetTemplate"
                              view="_local">
            <query>
                <![CDATA[select e from amxd$WidgetTemplate e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout expand="dashboardLayoutBox"
            height="100%"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="dashboardDs">
            <column width="450px">
                <field property="title"
                       required="true"/>
                <field property="referenceName"
                       required="true"/>
                <field property="isAvailableForAllUsers"/>
            </column>
        </fieldGroup>
        <groupBox id="paramsBox"
                  caption="msg://dashboardParameters"
                  collapsable="true"
                  collapsed="true"/>
        <hbox id="dashboardLayoutBox"
              expand="canvasBox"
              margin="true"
              spacing="true"
              width="100%">
            <groupBox id="paletteBox"
                      height="100%"
                      spacing="true"
                      width="300px"/>
            <groupBox id="canvasBox"
                      height="100%"
                      spacing="true"/>
        </hbox>
        <buttonsPanel id="buttonsPanel"
                      alwaysVisible="true">
            <button id="okBtn"
                    caption="msg://ok"
                    icon="EDITOR_OK"
                    invoke="commitAndClose"/>
            <button id="cancelBtn"
                    caption="msg://cancel"
                    icon="EDITOR_CANCEL"
                    invoke="cancel"/>
            <button id="propogateBtn"
                    caption="msg://propagate"
                    icon="BULLHORN"
                    invoke="onPropagateBtnClick"
                    stylename="amdx-left-margin-button"/>
            <button id="exportJsonBtn"
                    caption="msg://exportJson"
                    icon="DOWNLOAD"
                    invoke="onExportJsonBtnClick"
                    stylename="amdx-left-margin-button"/>
            <upload id="importJsonField"
                    uploadButtonCaption="msg://importJson"
                    uploadButtonIcon="UPLOAD"/>
        </buttonsPanel>
    </layout>
</window>
