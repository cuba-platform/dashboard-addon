<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://dashboardEdit"
        class="com.audimex.dashboard.web.dashboard.DashboardEdit"
        focusComponent="fieldGroup"
        datasource="dashboardDs">
    <dsContext>
        <datasource id="dashboardDs"
                    class="com.audimex.dashboard.model.Dashboard">
        </datasource>
        <collectionDatasource id="widgetTemplatesDs"
                              class="com.audimex.dashboard.entity.WidgetTemplate"
                              view="_local">
            <query>
                <![CDATA[select e from amxd$WidgetTemplate e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout spacing="true"
            expand="dashboardLayoutBox"
            height="100%">
        <fieldGroup id="fieldGroup"
                    datasource="dashboardDs">
            <column width="450px">
                <field property="title"/>
            </column>
        </fieldGroup>
        <groupBox id="paramsBox"
                  caption="msg://dashboardParameters"
                  collapsable="true"
                  collapsed="true"
                  width="100%">
            <frame id="paramsFrame"
                   screen="amdx$Parameter.browse"/>
        </groupBox>
        <hbox id="dashboardLayoutBox"
              width="100%"
              expand="canvasBox"
              margin="true"
              spacing="true">
            <groupBox id="paletteBox"
                      spacing="true"
                      width="300px"
                      height="100%"/>
            <groupBox id="canvasBox"
                      height="100%"
                      spacing="true"/>
        </hbox>
        <frame id="windowActions"
               screen="extendedEditWindowActions"/>
    </layout>
</window>