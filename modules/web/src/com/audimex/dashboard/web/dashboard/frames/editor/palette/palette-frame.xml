<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        class="com.audimex.dashboard.web.dashboard.frames.editor.palette.PaletteFrame">
    <dsContext>
        <collectionDatasource id="widgetTemplatesDs"
                              class="com.audimex.dashboard.entity.WidgetTemplate"
                              view="_local">
            <query>
                <![CDATA[select e from amxd$WidgetTemplate e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout spacing="true"
            width="100%"
            height="100%">
        <accordion id="accordionPalette"
                   height="100%"
                   width="100%">
            <tab id="widgetTab"
                 caption="msg://widgets"
                 expand="widgetBox">
                <hbox id="widgetBtnBox"
                      margin="true,true,false,true"
                      spacing="true">
                    <button id="createWidgetBtn"
                            caption="msg://create"
                            invoke="createWidget"/>
                    <button id="removeWidgetBtn"
                            caption="msg://remove"
                            enable="false"
                            invoke="removeWidget"/>
                    <button id="doTemplateBtn"
                            caption="msg://doTemplate"
                            enable="false"
                            invoke="doTemplate"/>
                </hbox>
                <scrollBox id="widgetBox"
                           scrollBars="vertical"
                           width="100%"
                           height="100%"/>
            </tab>
            <tab id="layoutTab"
                 caption="msg://layouts">
                <scrollBox id="layoutBox"
                           scrollBars="vertical"
                           width="100%"
                           height="100%"/>
            </tab>
            <tab id="widgetTemplateTab"
                 caption="msg://widgetTemplates">
                <scrollBox id="widgetTemplateBox"
                           scrollBars="vertical"
                           width="100%"
                           height="100%"/>
            </tab>
        </accordion>
    </layout>
</window>