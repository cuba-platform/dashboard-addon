<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        xmlns:dnd="http://schemas.haulmont.com/dnd/0.1/drag-and-drop.xsd"
        class="com.audimex.dashboard.web.dashboard.frames.editor.palette.PaletteFrame">
    <dsContext>
        <collectionDatasource id="widgetTemplatesDs"
                              class="com.audimex.dashboard.entity.WidgetTemplate"
                              view="_local">
            <query>
                <![CDATA[select e from amxd$WidgetTemplate e]]>
            </query>
        </collectionDatasource>
    </dsContext>
    <layout spacing="true"
            width="100%"
            height="100%">
        <accordion id="accordionPalette"
                   height="100%"
                   width="100%">
            <tab id="widgetTab"
                 caption="msg://widgets"
                 expand="widgetBox">
                <scrollBox id="widgetBox"
                           scrollBars="vertical"
                           width="100%"
                           height="100%">
                    <dnd:dndVBoxLayout id="ddWidgetBox"
                                       dragMode="CLONE"
                                       margin="true"
                                       width="100%"
                                       height="100%"/>
                </scrollBox>
            </tab>
            <tab id="layoutTab"
                 caption="msg://layouts">
                <scrollBox id="layoutBox"
                           scrollBars="vertical"
                           width="100%"
                           height="100%">
                    <dnd:dndVBoxLayout id="ddLayoutBox"
                                       dragMode="CLONE"
                                       margin="true"
                                       width="100%"
                                       height="100%"/>
                </scrollBox>
            </tab>
            <tab id="widgetTemplateTab"
                 caption="msg://widgetTemplates">
                <scrollBox id="widgetTemplateBox"
                           scrollBars="vertical"
                           width="100%"
                           height="100%">
                    <dnd:dndVBoxLayout id="ddWidgetTemplateBox"
                                       dragMode="CLONE"
                                       margin="true"
                                       width="100%"
                                       height="100%"/>
                </scrollBox>
            </tab>
        </accordion>
    </layout>
</window>