<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://caption"
        class="com.audimex.dashboard.web.dashboard.DashboardFrame"
        icon="font-icon:DASHBOARD"
        messagesPack="com.audimex.dashboard.web.dashboard">

    <actions>
        <action id="removeComponent" shortcut="DELETE" invoke="removeComponent"/>
        <action id="configureComponent" shortcut="CTRL-ENTER" invoke="configureComponent"/>
    </actions>

    <dialogMode height="600"
                width="800"/>
    <layout expand="mainLayout"
            spacing="true">
        <hbox id="controlLayout"
              spacing="true">
            <checkBox id="allowEdit"
                      align="MIDDLE_LEFT"
                      caption="Designer mode"/>
        </hbox>
        <hbox id="mainLayout"
              expand="dropLayout"
              spacing="true"
              width="100%">
            <split id="palette"
                   height="100%"
                   orientation="vertical"
                   width="300px">
                <vbox spacing="true">
                    <label htmlEnabled="true"
                           value="msg://dashboard.palette"/>
                    <vbox id="containers"/>
                </vbox>
                <vbox expand="treeLayout"
                      height="100%"
                      margin="true,false,false,false"
                      spacing="true">
                    <label htmlEnabled="true"
                           value="msg://dashboard.componentTree"/>
                    <hbox spacing="true"
                          width="100%">
                        <button id="removeComponent"
                                caption="Remove"
                                enable="false"
                                invoke="removeComponent"
                                width="100%"/>
                        <button caption="Clear all"
                                invoke="clearAll"
                                width="100%"/>
                    </hbox>
                    <vbox id="treeLayout"/>
                </vbox>
            </split>
            <vbox id="dropLayout"
                  height="100%"
                  spacing="true"/>
        </hbox>
    </layout>
</window>
