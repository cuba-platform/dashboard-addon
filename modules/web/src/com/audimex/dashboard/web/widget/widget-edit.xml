<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.audimex.dashboard.web.widget.WidgetEdit"
        datasource="widgetDs"
        focusComponent="fieldGroup"
        messagesPack="com.audimex.dashboard.web.widget">
    <dsContext>
        <datasource id="widgetDs"
                    class="com.audimex.dashboard.entity.Widget"
                    view="widget-params">
            <collectionDatasource id="paramsDs" property="parameters"/>
        </datasource>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="widgetDs">
            <column width="450px">
                <field property="widgetId"/>
                <field property="caption"/>
                <field property="icon"/>
                <field property="description"/>
                <field property="frameId"
                       custom="true"/>
            </column>
        </fieldGroup>
        <!--<frame id="paramsFrame"-->
               <!--screen="params-frame.xml"/>-->
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
