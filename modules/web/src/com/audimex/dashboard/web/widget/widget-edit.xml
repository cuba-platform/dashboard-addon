<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editorCaption"
        class="com.audimex.dashboard.web.widget.WidgetEdit"
        focusComponent="fieldGroup"
        datasource="widgetDs"
        messagesPack="com.audimex.dashboard.web.widget">
    <dsContext>
        <datasource id="widgetDs"
                    class="com.audimex.dashboard.model.Widget">
        </datasource>
    </dsContext>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="widgetDs">
            <column width="450px">
                <field property="widgetId"
                       required="true"/>
                <field property="caption"
                       required="true"/>
                <field property="description"/>
            </column>
        </fieldGroup>
        <hbox id="typeHbox"
              spacing="true">
            <label id="typeLabel"
                   width="85px"
                   value="msg://widgetType"/>
            <lookupField id="typeLookup"
                         nullOptionVisible="false"
                         required="true"/>
        </hbox>
        <vbox id="widgetEditBox"/>
        <groupBox id="paramsBox"
                  caption="msg://widgetParameters"
                  collapsable="true"
                  width="100%">
            <frame id="paramsFrame"
                   screen="amdx$Parameter.browse"/>
        </groupBox>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
